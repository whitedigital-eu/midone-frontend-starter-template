
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": ["vite/client", "vitest", "jest"],
    "plugins": [
      { "name": "@vuedx/typescript-plugin-vue" },
    ],
    "strict": true,
    "noImplicitAny": false,
  },
  "include": ["resources/**/*.ts", "resources/**/*.d.ts", "resources/**/*.tsx", "resources/**/*.vue"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}